@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "";
    ViewData["Title"] = "SiteDashboard";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f4f4f4;
            margin: 0;
            height: 100vh;
        }

        .dashboard {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 90%;
            max-width: 1400px;
            flex-wrap: wrap;
        }

        .widget {
            background: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 10px;
            padding: 20px;
            flex: 1 1 calc(30% - 40px);
            box-sizing: border-box;
            min-height: 150px;
            text-align: center;
        }

            .widget h3 {
                margin: 0 0 10px;
                font-size: 1.2em;
            }

            .widget .value {
                font-size: 2em;
                color: #333;
            }

            .widget .details {
                color: #888;
            }

        .chart {
            width: 100%;
            height: 150px;
        }
    </style>
</head>
<body>
    <div class="dashboard">
        <div class="widget">
            <h3>Site Run On</h3>
            <div class="value">EB</div>
            <div class="details">EB Availability: 94%</div>
            <div class="details">EB Downtime: 01:31 Hrs</div>
            <div class="details">DG Uptime: 00:00 Hrs</div>
            <div class="details">DC: 54.0 Volt</div>
        </div>
        <div class="widget">
            <h3>Fuel Status</h3>
            <div id="fuelChart" class="chart"></div>
        </div>
        <div class="widget">
            <h3>Cabin Temp</h3>
            <div class="value">14.9 °C</div>
            <div class="details">Avg: 17.31 °C</div>
        </div>
        <div class="widget">
            <h3>Grill Temp</h3>
            <div class="value">NA</div>
            <div class="details">Avg: NA</div>
        </div>
        <div class="widget">
            <h3>Ambient Temp</h3>
            <div class="value">11.3 °C</div>
            <div class="details">Avg: 13.07 °C</div>
        </div>
    </div>
    <script src="https://cdn.amcharts.com/lib/5/index.js"></script>
    <script src="https://cdn.amcharts.com/lib/5/xy.js"></script>
    <script src="https://cdn.amcharts.com/lib/5/themes/Animated.js"></script>
    <script>
        am5.ready(function () {
            // Create root element
            var root = am5.Root.new("fuelChart");

            // Set themes
            root.setThemes([
                am5themes_Animated.new(root)
            ]);

            // Create chart
            var chart = root.container.children.push(am5xy.XYChart.new(root, {
                panX: false,
                panY: false,
                wheelX: "none",
                wheelY: "none"
            }));

            var data = [{
                category: "Available",
                value: 0
            }, {
                category: "Capacity",
                value: 250
            }, {
                category: "Threshold",
                value: 80
            }];

            var xAxis = chart.xAxes.push(am5xy.CategoryAxis.new(root, {
                categoryField: "category"
            }));

            xAxis.data.setAll(data);

            var yAxis = chart.yAxes.push(am5xy.ValueAxis.new(root, {}));

            var series = chart.series.push(am5xy.ColumnSeries.new(root, {
                name: "Series",
                xAxis: xAxis,
                yAxis: yAxis,
                valueYField: "value",
                categoryXField: "category"
            }));

            series.data.setAll(data);
        });
    </script>
</body>
</html>

